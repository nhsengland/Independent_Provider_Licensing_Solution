@{
    Layout = "~/Views/Shared/_Layout_With_BreadCrumb.cshtml";
    ViewBag.Title = "NHS - Provider Licensing portal: Team members - Delete pending user confirmation";
}
<div class="nhsuk-width-container app-width-container">
    <nav class="nhsuk-breadcrumb app-breadcrumb" aria-label="Breadcrumb">
        <div class="nhsuk-width-container">
            <ol class="nhsuk-breadcrumb__list">
                <li class="nhsuk-breadcrumb__item"><a class="nhsuk-breadcrumb__link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nhsuk-breadcrumb__item"><a class="nhsuk-breadcrumb__link" asp-controller="Team" asp-action="Index">Team members</a></li>
                <li class="nhsuk-breadcrumb__item"><a class="nhsuk-breadcrumb__link" asp-controller="TeamDelete" asp-action="DeletePendingUserConfirmation">Delete pending user confirmation</a></li>
            </ol>
        </div>
    </nav>
    <main class="nhsuk-main-wrapper app-main-wrapper" id="maincontent" role="main">
        <div class="nhsuk-grid-row">
            <div class="nhsuk-inset-text">
                <span class="nhsuk-u-visually-hidden">Information: </span>

                <h1 class="nhsuk-heading-l">Confirmation</h1>

                <h2 class="nhsuk-heading-m">You have successfully removed pending invitation</h2>
            </div>

            <p>
                The pending user has been successfully removed and no longer has access to the NHS Independent Provider Licensing Portal. Their name has also been removed from the Active Users list.
            </p>

            <p>
                The NHS England Independent Providers team have been notified this person has been removed
            </p>
            <p>
                <a asp-action="Feedback" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
            </p>
        </div>
    </main>
</div>