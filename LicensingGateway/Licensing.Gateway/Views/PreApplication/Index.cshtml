@using Licensing.Gateway.Models.PreApplication
@model IndexViewModel;
@{
    ViewData["Title"] = "NHS England provider licence application: part one";
}

<partial name="_BackButton" />

@using (Html.BeginForm())
{
    <div class="nhsuk-grid-row">
        <h1>
            @ViewData["Title"]
        </h1>

        <p>
            Part one of the application process helps your organisation determine if it requires an NHS provider licence.
        </p>

        <h2>
            You can use this service if:
        </h2>

        <ul>
            <li>
                your organisation is Care Quality Commission (CQC) registered as a provider of healthcare services for the NHS in England
            </li>
            <li>
                your provider details as registered with CQC are up to date
            </li>
            <li>
                you have a reasonable expectation that your applicable turnover for the next 12 months will be Â£10 million or more
            </li>
            <li>
                you have read the <a asp-controller="Home" asp-action="CheckIfYouNeedALicense">NHS provider licence guidance</a> and have determined that your organisation is required to hold a licence
            </li>
        </ul>

        <h2>
            During this part of the application, you will:
        </h2>

        <ul>
            <li>
                provide your CQC Provider ID for the organisation applying for a licence
            </li>
            <li>
                provide your expected applicable turnover for the next 12 months
            </li>
            <li>
                confirm that your CQC registration includes the healthcare services you provide for the NHS in England
            </li>
            <li>
                provide contact details
            </li>
        </ul>

        <h2>
            Why is this information needed?
        </h2>

        <p>
            This form collects essential information to assess if your organisation is likely to be legally required to hold a licence.
        </p>

        <button class="nhsuk-button" data-module="nhsuk-button" data-prevent-double-click="true" type="submit" asp-action="Index">
            Start now
        </button>

    </div>
}
