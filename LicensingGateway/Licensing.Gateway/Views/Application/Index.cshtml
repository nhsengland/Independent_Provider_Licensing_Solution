@using Licensing.Gateway.Models.Application
@model ApplicationIndexViewModel;
@{
    ViewData["Title"] = "Enter your application code";
}

<partial name="_BackButton" />

@using (Html.BeginForm())
{
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
            <h1>
                Apply for an NHS Provider licence
            </h1>

            <p>Use this service to:</p>

            <ul>
                <li>Apply for a Provider licence</li>
            </ul>

            <p>Applying takes around 20 minutes.</p>


            <h2 class="nhsuk-heading-m">Before you start</h2>

            <p>You can only use this service if you live in the UK.</p>

            <button class="nhsuk-button" data-module="nhsuk-button" data-prevent-double-click="true" type="submit" asp-action="Index">
                Start now
            </button>

        </div>

    </div>
}
